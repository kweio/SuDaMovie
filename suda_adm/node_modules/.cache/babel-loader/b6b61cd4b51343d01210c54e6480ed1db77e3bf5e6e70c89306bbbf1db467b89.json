{"ast":null,"code":"export default {\n  name: 'UserList',\n  data() {\n    return {\n      radio: '1',\n      //编辑修改\n      userData: {},\n      //页面展示\n      userInfo: [],\n      dialogFormVisible: false\n    };\n  },\n  computed: {\n    getSup() {\n      if (this.userInfo.sup === 'true') {\n        return \"管理员权限\";\n      }\n      if (this.userInfo.sup === 'false') {\n        return \"普通用户\";\n      } else {\n        return \"error\";\n      }\n    }\n  },\n  methods: {\n    //展示用户信息\n    async fetch() {\n      const res = await this.$http.get('/user');\n      this.userInfo = res.data;\n      console.log(this.userInfo);\n    },\n    //删除用户\n    async remove(index, row) {\n      this.$confirm(`此操作将删除用户\"${row.name}\", 是否继续?`, '提示', {\n        confirmButtonText: '确定',\n        cancelButtonText: '取消',\n        type: 'warning'\n      }).then(async () => {\n        const res = await this.$http.delete(`/user`, {\n          data: {\n            _id: row._id\n          }\n        }); // eslint-disable-line no-unused-vars\n        this.$message({\n          type: 'success',\n          message: '删除成功!'\n        });\n        await this.$router.go(0);\n      });\n    },\n    //保存，更新\n    async editSave() {\n      const res = await this.$http.put('/user', this.userData); // eslint-disable-line no-unused-vars\n      await this.$router.go(0);\n      this.$message({\n        type: 'success',\n        message: '修改成功'\n      });\n    },\n    userEdit(row) {\n      this.userData = row;\n      this.name = row.name;\n      this.dialogFormVisible = true;\n    },\n    //头像上传\n    handleAvatarSuccess(res) {\n      this.$set(this.userData, 'icon', res.url);\n      this.userData.icon = res.url;\n    },\n    // 上传头像提示\n    beforeAvatarUpload(file) {\n      const isJPG = file.type === 'image/jpeg';\n      const isLt2M = file.size / 1024 / 1024 < 2;\n      if (!isJPG) {\n        this.$message.error('上传头像图片只能是 JPG 格式!');\n      }\n      if (!isLt2M) {\n        this.$message.error('上传头像图片大小不能超过 2MB!');\n      }\n      return isJPG && isLt2M;\n    },\n    // 取消对话框\n    cancel() {\n      // 清空planInfo数据\n      this.userData = {};\n      this.dialogFormVisible = false;\n    },\n    changeRadio(val) {\n      this.$set(this.userData, 'sex', '');\n      this.userData.sex = val;\n    }\n  },\n  //自动执行\n  created() {\n    this.fetch();\n  }\n};","map":{"version":3,"mappings":"AA0IA;EACAA;EACAC;IACA;MACAC;MACA;MACAC;MACA;MACAC;MACAC;IACA;EACA;EACAC;IACAC;MACA;QACA;MACA;MAAA;QACA;MACA;QACA;MACA;IACA;EACA;EAEAC;IACA;IACA;MACA;MACA;MACAC;IACA;IACA;IACA;MACA;QACAC;QACAC;QACAC;MACA;QACA;UAAAX;YAAAY;UAAA;QAAA;QACA;UACAD;UACAE;QACA;QACA;MACA;IACA;IACA;IACA;MACA;MACA;MACA;QACAF;QACAE;MACA;IACA;IACAC;MACA;MACA;MACA;IACA;IACA;IACAC;MACA;MACA;IACA;IACA;IACAC;MACA;MACA;MAEA;QACA;MACA;MACA;QACA;MACA;MACA;IACA;IACA;IACAC;MACA;MACA;MACA;IACA;IACAC;MACA;MACA;IACA;EACA;EACA;EACAC;IACA;EACA;AACA","names":["name","data","radio","userData","userInfo","dialogFormVisible","computed","getSup","methods","console","confirmButtonText","cancelButtonText","type","_id","message","userEdit","handleAvatarSuccess","beforeAvatarUpload","cancel","changeRadio","created"],"sourceRoot":"src/views/Home","sources":["UserList.vue"],"sourcesContent":["<template>\r\n  <div id=\"user-manage\">\r\n    <div class=\"top\">\r\n      <el-input placeholder=\"请输入内容\" class=\"input-with-select\" style=\"width: 30%\">\r\n        <template v-slot:append>\r\n          <el-button icon=\"el-icon-search\">搜索</el-button>\r\n        </template>\r\n      </el-input>\r\n    </div>\r\n    <div class=\"user-table\">\r\n      <el-table\r\n          border\r\n          :data=\"userInfo\">\r\n        <el-table-column\r\n            label=\"用户 ID\"\r\n            align=\"center\"\r\n            prop=\"_id\">\r\n        </el-table-column>\r\n        <el-table-column\r\n            label=\"昵称\"\r\n            align=\"center\"\r\n            show-overflow-tooltip\r\n            prop=\"name\">\r\n        </el-table-column>\r\n        <el-table-column\r\n            label=\"用户头像\"\r\n            align=\"center\"\r\n            show-overflow-tooltip\r\n            prop=\"icon\">\r\n          <template v-slot=\"scope\">\r\n            <img :src=\"scope.row.icon\" style=\"width: 80%;height:80%\">\r\n          </template>\r\n\r\n        </el-table-column>\r\n        <el-table-column\r\n            align=\"center\"\r\n            label=\"手机号\"\r\n            prop=\"phone\">\r\n        </el-table-column>\r\n        <el-table-column\r\n            label=\"性别\"\r\n            align=\"center\"\r\n            show-overflow-tooltip\r\n            prop=\"sex\">\r\n        </el-table-column>\r\n        <el-table-column\r\n            label=\"年龄\"\r\n            align=\"center\"\r\n            show-overflow-tooltip\r\n            prop=\"age\">\r\n        </el-table-column>\r\n        <el-table-column\r\n            label=\"用户权限\"\r\n            align=\"center\"\r\n            show-overflow-tooltip\r\n            prop=\"sup\">\r\n          {{}}\r\n          {{getSup}}\r\n        </el-table-column>\r\n\r\n        <el-table-column\r\n            width=\"200\"\r\n            align=\"center\"\r\n            label=\"操作\">\r\n          <template v-slot=\"scope\">\r\n            <el-button\r\n                size=\"mini\"\r\n                @click=\"userEdit(scope.row)\">\r\n              编辑\r\n            </el-button>\r\n            <el-button\r\n                size=\"mini\"\r\n                type=\"danger\"\r\n                @click=\"remove(scope.row)\">\r\n              删除\r\n            </el-button>\r\n          </template>\r\n        </el-table-column>\r\n      </el-table>\r\n    </div>\r\n    <div>\r\n      <el-dialog title=\"编辑用户信息\" :visible.sync=\"dialogFormVisible\">\r\n<!--        @submit.native.prevent=\"userEdit\">-->\r\n<!--        ref=\"ruleForm\"-->\r\n        <el-form >\r\n          <el-form-item label=\"用户名:\" prop=\"name\">\r\n            <el-input v-model=\"userData.name\"></el-input>\r\n          </el-form-item>\r\n          <el-form-item label=\"手机号:\" prop=\"phone\">\r\n            <el-input v-model.number=\"userData.phone\"></el-input>\r\n          </el-form-item>\r\n          <el-form-item label=\"密码:\" prop=\"pass\">\r\n            <el-input type=\"password\" v-model=\"userData.password\" autocomplete=\"off\"></el-input>\r\n          </el-form-item>\r\n          <el-form-item label=\"年龄:\" prop=\"age\">\r\n            <el-input v-model=\"userData.age\"></el-input>\r\n          </el-form-item>\r\n          <el-form-item label=\"性别:\" prop=\"sex\">\r\n            <el-radio v-model=\"radio\" label=\"女\" @change=\"changeRadio\">女</el-radio>\r\n            <el-radio v-model=\"radio\" label=\"男\" @change=\"changeRadio\">男</el-radio>\r\n          </el-form-item>\r\n          <el-form-item label=\"头像:\" prop=\"headPic\">\r\n            <el-upload\r\n                class=\"avatar-uploader\"\r\n                :action=\"$http.defaults.baseURL + '/user/upload/'\"\r\n                :show-file-list=\"false\"\r\n                :on-success=\"handleAvatarSuccess\"\r\n                :before-upload=\"beforeAvatarUpload\">\r\n              <img v-if=\"userData.icon\" :src=\"userData.icon\" class=\"avatar\">\r\n              <i v-else class=\"el-icon-plus avatar-uploader-icon\"></i>\r\n            </el-upload>\r\n          </el-form-item>\r\n          <el-form-item label=\"用户权限:\" prop=\"sup\" >\r\n            <el-switch\r\n                style=\"display: block;\"\r\n                v-model=\"userInfo.sup\"\r\n                active-color=\"#13ce66\"\r\n                inactive-color=\"#ff4949\"\r\n                active-text=\"管理员\"\r\n                inactive-text=\"普通用户\"\r\n                active-value=true\r\n                inactive-value=false>\r\n            </el-switch>\r\n          </el-form-item>\r\n          <el-form-item>\r\n<!--            native-type=\"submit\"-->\r\n            <el-button type=\"primary\" @click=\"editSave\">修改</el-button>\r\n            <el-button type=\"danger\" @click=\"cancel\">取消</el-button>\r\n          </el-form-item>\r\n        </el-form>\r\n      </el-dialog>\r\n    </div>\r\n  </div>\r\n\r\n</template>\r\n\r\n<script>\r\n\r\nexport default {\r\n  name: 'UserList',\r\n  data() {\r\n    return {\r\n      radio: '1',\r\n      //编辑修改\r\n      userData: {},\r\n      //页面展示\r\n      userInfo: [],\r\n      dialogFormVisible: false,\r\n    }\r\n  },\r\n  computed:{\r\n    getSup(){\r\n      if (this.userInfo.sup === 'true'){\r\n        return \"管理员权限\"\r\n      }if(this.userInfo.sup === 'false'){\r\n        return \"普通用户\"\r\n      }else{\r\n        return \"error\"\r\n      }\r\n    }\r\n  },\r\n\r\n  methods: {\r\n    //展示用户信息\r\n    async fetch() {\r\n      const res = await this.$http.get('/user')\r\n      this.userInfo = res.data\r\n      console.log(this.userInfo)\r\n    },\r\n    //删除用户\r\n    async remove(index, row) {\r\n      this.$confirm(`此操作将删除用户\"${row.name}\", 是否继续?`, '提示', {\r\n        confirmButtonText: '确定',\r\n        cancelButtonText: '取消',\r\n        type: 'warning'\r\n      }).then(async () => {\r\n        const res = await this.$http.delete(`/user`, {data: {_id: row._id}}) // eslint-disable-line no-unused-vars\r\n        this.$message({\r\n          type: 'success',\r\n          message: '删除成功!'\r\n        });\r\n        await this.$router.go(0)\r\n      })\r\n    },\r\n    //保存，更新\r\n    async editSave(){\r\n      const res = await this.$http.put('/user',this.userData)// eslint-disable-line no-unused-vars\r\n      await this.$router.go(0)\r\n      this.$message({\r\n        type:'success',\r\n        message:'修改成功',\r\n      })\r\n    },\r\n    userEdit(row) {\r\n      this.userData = row\r\n      this.name = row.name\r\n      this.dialogFormVisible = true\r\n    },\r\n    //头像上传\r\n    handleAvatarSuccess(res) {\r\n      this.$set(this.userData,'icon',res.url)\r\n      this.userData.icon = res.url\r\n    },\r\n    // 上传头像提示\r\n    beforeAvatarUpload(file) {\r\n      const isJPG = file.type === 'image/jpeg';\r\n      const isLt2M = file.size / 1024 / 1024 < 2;\r\n\r\n      if (!isJPG) {\r\n        this.$message.error('上传头像图片只能是 JPG 格式!');\r\n      }\r\n      if (!isLt2M) {\r\n        this.$message.error('上传头像图片大小不能超过 2MB!');\r\n      }\r\n      return isJPG && isLt2M;\r\n    },\r\n    // 取消对话框\r\n    cancel() {\r\n      // 清空planInfo数据\r\n      this.userData = {};\r\n      this.dialogFormVisible = false;\r\n    },\r\n    changeRadio(val) {\r\n      this.$set(this.userData, 'sex', '')\r\n      this.userData.sex = val\r\n    },\r\n  },\r\n  //自动执行\r\n  created() {\r\n    this.fetch()\r\n  },\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.top {\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  padding: 30px 0;\r\n  margin-bottom: 30px;\r\n}\r\n\r\n.user-table {\r\n  width: 90%;\r\n  min-width: 900px;\r\n  margin: 0 auto 30px;\r\n}\r\n\r\n.avatar-uploader .el-upload, i {\r\n  border: 1px dashed #d9d9d9;\r\n  border-radius: 6px;\r\n  cursor: pointer;\r\n  position: relative;\r\n  overflow: hidden;\r\n}\r\n\r\n.avatar-uploader .el-upload:hover {\r\n  border-color: #409EFF;\r\n}\r\n\r\n.avatar-uploader-icon {\r\n  font-size: 28px;\r\n  color: #8c939d;\r\n  width: 178px;\r\n  height: 178px;\r\n  line-height: 178px;\r\n  text-align: center;\r\n}\r\n\r\n.avatar {\r\n  width: 178px;\r\n  height: 178px;\r\n  display: block;\r\n}\r\n</style>"]},"metadata":{},"sourceType":"module","externalDependencies":[]}