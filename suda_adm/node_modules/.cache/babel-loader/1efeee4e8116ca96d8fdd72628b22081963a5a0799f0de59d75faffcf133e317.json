{"ast":null,"code":"export default {\n  data() {\n    return {\n      currentPage: 1,\n      // 当前页码\n      total: 20,\n      // 总条数\n      pageSize: 5,\n      // 每页的数据条数\n      // 对话框显示标题\n      dialogTitle: \"\",\n      // 对话框显示状态\n      dialogFormVisible: false,\n      // 添加或编辑宣传信息\n      adInfo: {\n        name: \"\",\n        movieId: \"\",\n        adImage: \"\"\n      },\n      // 宣传列表数据\n      adList: [],\n      // 电影列表数据\n      movieList: [],\n      // 表单验证规则\n      adInfoFormrules: {\n        movieId: [{\n          required: true,\n          message: \"电影名不能为空\",\n          trigger: \"change\"\n        }],\n        adImage: [{\n          required: true,\n          message: \"请上传电影宣传海报\",\n          trigger: \"blur\"\n        }]\n      },\n      // 分页器样式\n      queryInfo: {\n        // 每页显示的条数\n        pageSize: 3,\n        // 当前页数\n        currentPage: 1,\n        // 总页数\n        total: 0\n      },\n      // 搜索框内容\n      searchContent: \"\"\n    };\n  },\n  methods: {\n    // 电影宣传海报上传成功\n\n    // 选中电影名后(得到是电影id),将电影名赋值给name\n\n    // 获取电影列表\n    async movieFetch() {\n      const res = await this.$http.get('/movie');\n      this.movieList = res.data;\n    },\n    // 添加宣传\n    addMovie() {\n      // 清空排片列表\n      this.adInfo = {};\n      this.dialogTitle = \"添加广告\";\n      this.dialogFormVisible = true;\n    },\n    //确认对话框\n    // 取消对话框\n    cancel() {\n      // console.log(this.adInfo);\n      this.dialogFormVisible = false;\n      // 清空adInfo数据\n      this.adInfo = {};\n    },\n    // 编辑宣传\n    adEdit(row) {\n      this.dialogFormVisible = true;\n      this.dialogTitle = \"编辑宣传\";\n      // 这里拿到的row直接赋值是浅拷贝，JSON赋值是深拷贝\n      // 如果浅拷贝，Bug：点击编辑出现对话框修改数据，点击取消列表数据会变\n      // 但其实并没发请求，刷新后又变回原样\n      this.adInfo = JSON.parse(JSON.stringify(row));\n      this.adInfo.movieId = this.adInfo.movieId._id;\n      console.log(this.adInfo);\n    },\n    // 删除宣传\n    async adDelete(row) {\n      const confirmResult = await this.$confirm(`是否确定要撤销电影<${row.name}>的宣传?`, \"提示\", {\n        confirmButtonText: \"确定\",\n        cancelButtonText: \"取消\",\n        type: \"warning\",\n        center: true\n      }).catch(err => err);\n      if (confirmResult === \"confirm\") {\n        // 删除成功，发送删除数据请求\n        const data = await this.$http.delete(`/advertises/${row._id}`);\n        // 删除后，更新列表\n        // this.getAdList();\n        this.$message({\n          type: \"success\",\n          message: \"删除成功\"\n        });\n      } else {\n        this.$message({\n          type: \"info\",\n          message: \"已取消删除\"\n        });\n      }\n    }\n    // 分页器当前页面变动时触发\n  },\n\n  created() {\n    this.movieFetch();\n  }\n};","map":{"version":3,"mappings":"AAsHA;EACAA;IACA;MACAC;MAAA;MACAC;MAAA;MACAC;MAAA;MACA;MACAC;MACA;MACAC;MACA;MACAC;QACAC;QACAC;QACAC;MACA;MACA;MACAC;MACA;MACAC;MACA;MACAC;QACAJ,UACA;UAAAK;UAAAC;UAAAC;QAAA,EACA;QACAN,UACA;UAAAI;UAAAC;UAAAC;QAAA;MAEA;MACA;MACAC;QACA;QACAb;QACA;QACAF;QACA;QACAC;MACA;MACA;MACAe;IACA;EACA;EACAC;IACA;;IAEA;;IAEA;IACA;MACA;MACA;IACA;IACA;IACAC;MACA;MACA;MACA;MACA;IACA;IACA;IACA;IACAC;MACA;MACA;MACA;MACA;IACA;IACA;IACAC;MACA;MACA;MACA;MACA;MACA;MACA;MACA;MACAC;IACA;IACA;IACA;MACA,0CACA,8BACA,MACA;QACAC;QACAC;QACAC;QACAC;MACA,EACA;MACA;QACA;QACA;QACA;QACA;QACA;UACAD;UACAX;QACA;MACA;QACA;UACAW;UACAX;QACA;MACA;IACA;IACA;EAGA;;EACAa;IACA;EACA;AACA","names":["data","currentPage","total","pageSize","dialogTitle","dialogFormVisible","adInfo","name","movieId","adImage","adList","movieList","adInfoFormrules","required","message","trigger","queryInfo","searchContent","methods","addMovie","cancel","adEdit","console","confirmButtonText","cancelButtonText","type","center","created"],"sourceRoot":"src/views/Home","sources":["MovieAdvertise.vue"],"sourcesContent":["<template>\r\n  <div class=\"Plan\">\r\n    <!--搜索-->\r\n    <div class=\"top\">\r\n      <el-col :span=\"15\">\r\n        <el-input\r\n            placeholder=\"请输入电影名\"\r\n            class=\"input-with-select\"\r\n            style=\"width: 100%\"\r\n