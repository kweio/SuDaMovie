{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  data() {\n    return {\n      currentPage: 1,\n      // 当前页码\n      total: 0,\n      // 总条数\n      pageSize: 5,\n      // 每页的数据条数\n      // 对话框显示标题\n      dialogTitle: \"\",\n      // 对话框显示状态\n      dialogFormVisible: false,\n      // 添加或编辑宣传信息\n      adInfo: {\n        // name: \"\",\n        // // movieId: \"\",\n        // adImage: \"\",\n      },\n      // 宣传列表数据\n      adList: [],\n      // 电影列表数据\n      movieList: [],\n      // 表单验证规则\n\n      // 搜索框内容\n      searchContent: \"\"\n    };\n  },\n  methods: {\n    // 电影宣传海报上传成功\n\n    // 选中电影名后(得到是电影id),将电影名赋值给name\n\n    // 获取电影列表\n    async movieFetch() {\n      const res = await this.$http.get('/movie');\n      this.movieList = res.data;\n    },\n    // 添加宣传\n    addMovie() {\n      // 清空排片列表\n      this.adInfo = {};\n      this.dialogTitle = \"添加广告\";\n      this.dialogFormVisible = true;\n    },\n    //确认对话框\n    // 取消对话框\n\n    // 编辑宣传\n\n    // 删除宣传\n\n    // 新增宣传信息\n    async save() {\n      //http://localhost:3000/admin/api/\n      const res = await this.$http.post('/advertise', this.adInfo); // eslint-disable-line no-unused-vars\n      this.$message({\n        type: 'success',\n        message: '添加成功'\n      });\n      await this.$router.push('/home/movieAdvertise');\n    },\n    // 分页器当前页面变动时触发\n\n    handleAvatarSuccess(res) {\n      this.$set(this.movieData, 'icon', res.url);\n      this.movieData.icon = res.url;\n    },\n    beforeAvatarUpload(file) {\n      const isJPG = file.type === 'image/jpeg';\n      const isLt2M = file.size / 1024 / 1024 < 2;\n      if (!isJPG) {\n        this.$message.error('上传头像图片只能是 JPG 格式!');\n      }\n      if (!isLt2M) {\n        this.$message.error('上传头像图片大小不能超过 2MB!');\n      }\n      return isJPG && isLt2M;\n    },\n    //每页条数改变时触发 选择一页显示多少行\n    handleSizeChange(val) {\n      console.log(`每页 ${val} 条`);\n      this.currentPage = 1;\n      this.pageSize = val;\n    },\n    //当前页改变时触发 跳转其他页\n    handleCurrentChange(val) {\n      console.log(`当前页: ${val}`);\n      this.currentPage = val;\n    }\n  },\n  created() {\n    this.movieFetch();\n  }\n};","map":{"version":3,"mappings":";AAiIA;EACAA;IACA;MACAC;MAAA;MACAC;MAAA;MACAC;MAAA;MACA;MACAC;MACA;MACAC;MACA;MACAC;QACA;QACA;QACA;MAAA,CACA;MACA;MACAC;MACA;MACAC;MACA;;MAEA;MACAC;IACA;EACA;EACAC;IACA;;IAEA;;IAEA;IACA;MACA;MACA;IACA;IACA;IACAC;MACA;MACA;MACA;MACA;IACA;IACA;IACA;;IAEA;;IAEA;;IAEA;IACA;MACA;MACA;MACA;QACAC;QACAC;MACA;MACA;IACA;IACA;;IAEAC;MACA;MACA;IACA;IACAC;MACA;MACA;MAEA;QACA;MACA;MACA;QACA;MACA;MACA;IACA;IACA;IACAC;MACAC;MACA;MACA;IACA;IACA;IACAC;MACAD;MACA;IACA;EAEA;EACAE;IACA;EACA;AACA","names":["data","currentPage","total","pageSize","dialogTitle","dialogFormVisible","adInfo","adList","movieList","searchContent","methods","addMovie","type","message","handleAvatarSuccess","beforeAvatarUpload","handleSizeChange","console","handleCurrentChange","created"],"sourceRoot":"src/views/Home","sources":["MovieAdvertise.vue"],"sourcesContent":["<template>\r\n  <div class=\"Plan\">\r\n    <!--搜索-->\r\n    <div class=\"top\">\r\n      <el-col :span=\"15\">\r\n        <el-input\r\n            placeholder=\"请输入电影名\"\r\n            class=\"input-with-select\"\r\n            style=\"width: 30%\"\r\n            v-model=\"searchContent\"\r\n            clearable\r\n        >\r\n          <el-button slot=\"append\" icon=\"el-icon-search\">搜索</el-button>\r\n        </el-input>\r\n      </el-col>\r\n      <el-col :span=\"2\" :offset=\"1\">\r\n        <el-button type=\"primary\" size=\"small\" @click=\"addMovie\"\r\n        >添加宣传</el-button\r\n        >\r\n      </el-col>\r\n    </div>\r\n    <!-- 表格 -->\r\n    <div class=\"plan-table\">\r\n      <el-table border :data=\"adList\">\r\n        <el-table-column\r\n            label=\"电影名\"\r\n            width=\"200\"\r\n            show-overflow-tooltip\r\n            prop=\"name\"\r\n            align=\"center\"\r\n        ></el-table-column>\r\n        <